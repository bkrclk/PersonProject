<Window x:Class="Presantation.View.ProjectView" Background="#05ab9c"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presantation.View"
        mc:Ignorable="d"
        Title="ProjectView" Height="350" Width="700">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#009688" BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="7" Direction="330" Color="Black" ShadowDepth="4" Opacity="0.3"></DropShadowEffect>
                            </Border.Effect>
                            <ContentPresenter x:Name="cp" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"></ContentPresenter>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <Button Content="User Add" Command="{Binding GotoUserView}" HorizontalAlignment="Left" Margin="20,83,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
        <ListView SelectedItem="{Binding SelectedUser}" ItemsSource="{Binding UserViewList}"   HorizontalAlignment="Left" Margin="110,83,0,0" VerticalAlignment="Top" Width="275" Height="136">
            <ListView.View>
                <GridView>
                    <!--<GridViewColumn Header="id" DisplayMemberBinding="{Binding id}" />-->
                    <GridViewColumn Header="username" DisplayMemberBinding="{Binding username}" />
                    <GridViewColumn Header="password" DisplayMemberBinding="{Binding password}" />
                    <GridViewColumn Header="name" DisplayMemberBinding="{Binding name}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="" HorizontalAlignment="Left" Margin="20,113,0,0" VerticalAlignment="Top"/>
        <Button Content="Project Add" Command="{Binding GotoProjectView}" HorizontalAlignment="Left" Margin="420,83,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
        <ListView SelectedItem="{Binding SelectedProject}" ItemsSource="{Binding ProjectViewList}" HorizontalAlignment="Left" Margin="512,83,0,0" VerticalAlignment="Top" Width="135" Height="136">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id" DisplayMemberBinding="{Binding id}" />
                    <GridViewColumn Header="name" DisplayMemberBinding="{Binding name}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Delete" Command="{Binding DeleteUserListItem}" HorizontalAlignment="Left" Margin="20,119,0,0" VerticalAlignment="Top" Width="75" Height="30" RenderTransformOrigin="-0.773,1.933"/>
        <Button Content="Update" Command="{Binding GetUserListItem}" HorizontalAlignment="Left" Margin="20,154,0,0" VerticalAlignment="Top" Width="75" Height="30"/>

        <Button Content="Delete" Command="{Binding DeleteProjectListItem}" HorizontalAlignment="Left" Margin="420,119,0,0" VerticalAlignment="Top" Width="75" Height="30" RenderTransformOrigin="-0.773,1.933"/>
        <Button Content="Update" Command="{Binding GetProjectListItem}" HorizontalAlignment="Left" Margin="420,154,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
        
        <Label Content="User Actions Form" Background="#009688" TextBlock.Foreground="White" HorizontalAlignment="Left" Margin="20,43,0,0" VerticalAlignment="Top" Width="365"/>
        <Label Content="Project Actions Form" Background="#009688" TextBlock.Foreground="White" HorizontalAlignment="Left" Margin="420,43,0,0" VerticalAlignment="Top" Width="227"/>
    </Grid>
</Window>
